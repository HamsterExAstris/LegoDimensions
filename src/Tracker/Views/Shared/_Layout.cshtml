<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - LEGO&reg; Dimensions Tracker</title>

        <environment names="Development">
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
            <link rel="stylesheet" href="~/lib/metisMenu/dist/metisMenu.css" />
            <link rel="stylesheet" href="~/lib/startbootstrap-sb-admin-2/dist/css/sb-admin-2.css" />
            <link rel="stylesheet" href="~/css/site.css" />
        </environment>
        <environment names="Staging,Production">
            <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
                  asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
                  asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
            <link rel="stylesheet" href="~/lib/metisMenu/dist/metisMenu.min.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/lib/startbootstrap-sb-admin-2/dist/css/sb-admin-2.min.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        </environment>
    </head>
    <body>
        <div id="wrapper">
            <nav class="navbar navbar-inverse navbar-static-top" style="margin-bottom: 0;"> @* Override bootstrap default. *@
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand">LEGO&reg; Dimensions Tracker</a>
                    @await Html.PartialAsync("_LoginPartial")
                </div>
                <div class="navbar-collapse collapse sidebar sidebar-nav">
                    <ul class="nav">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Home" asp-action="About">About</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                        <li><a asp-controller="Pack" asp-action="Index">Packs</a></li>
                    </ul>
                </div>
            </nav>
        </div>
        <div id="page-wrapper">
            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    @* http://www.lego.com/en-US/legal/legal-notice/fair-play *@
                    <p>&copy; 2016 Andrew Timson. LEGO&reg; is a trademark of the LEGO Group of companies which does not sponsor, authorize or endorse this site.</p>
                </footer>
            </div>
        </div>

        <environment names="Development">
            <script src="~/lib/jquery/dist/jquery.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
            <script src="~/lib/metisMenu/dist/metisMenu.js"></script>
            <script src="~/lib/startbootstrap-sb-admin-2/dist/js/sb-admin-2.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
        </environment>
        <environment names="Staging,Production">
            <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.1.4.min.js"
                    asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                    asp-fallback-test="window.jQuery">
            </script>
            <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                    asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                    asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
            </script>
            <script src="~/lib/metisMenu/dist/metisMenu.min.js" asp-append-version="true"></script>
            <script src="~/lib/startbootstrap-sb-admin-2/dist/js/sb-admin-2.min.js" asp-append-version="true"></script>
            <script src="~/js/site.min.js" asp-append-version="true"></script>
        </environment>

        @RenderSection("scripts", required: false)
    </body>
</html>
